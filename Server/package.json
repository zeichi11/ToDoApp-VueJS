{
  "name": "todoapp-backend",
  "version": "1.0.0",
  "description": "TodoApp Backend Server.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist-server",
    "transpile": "tsc --outfile ./dist-server/server.js",
    "build": "npm-run-all clean transpile",
    "server:dev": "NODE_PATH=src nodemon --exec ts-node src/app.ts",
    "dev": "NODE_ENV=development npm run server:dev",
    "start:dev": "npm run dev",
    "server:prod": "pm2 start deploy.config.json",
    "prod": "NODE_ENV=production npm-run-all build server:prod",
    "start": "npm run prod",
    "watch:dev": "nodemon",
    "test": "jest",
    "server": "nodemon dist-server/server.js"
  },
  "author": "zeichi",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^15.0.0",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "dotenv": "^16.0.1",
    "express": "^4.17.1",
    "mongodb": "^4.6.0",
    "mongoose": "^6.3.4"
  }
}
