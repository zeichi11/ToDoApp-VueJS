{
  "compilerOptions": {
    "strict": true,
    "target": "ES5",
    "module": "system",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "outDir": "dist-server"
  },
  "include": [
    "src/**/*"
  ]
}